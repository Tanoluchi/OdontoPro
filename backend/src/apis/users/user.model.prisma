model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  rol_id     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  role       Role     @relation(fields: [rol_id], references: [id])
}

model Role {
  id         String   @id @default(cuid())
  nombre     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  users      User[]
}
