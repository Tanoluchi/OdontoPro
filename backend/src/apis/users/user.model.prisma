model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  rol_id     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  role       Role     @relation(fields: [rol_id], references: [id])
  @@map ("users")
}

model Role {
  id         String   @id @default(cuid())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  users      User[]
  @@map ("roles")
}
